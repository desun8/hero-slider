@keyframes slice {
  0% {
    width: 0;
  }

  100% {
    width: 100%;
  }
}

.hero-animation {
  display: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;

  /* @media (--tablet) {
    display: block;
  } */

  &_item {
    width: 0;
    height: calc(100 / 8 * 1%);
    background-color: rgba(39, 39, 39, 1);

    &--animated {
      animation: slice 1000ms cubic-bezier(0.47, 0, 0.745, 0.715) both;
    }
  }
}
